#!/usr/bin/make -f
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/rules/simple-patchsys.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/utils.mk

CFLAGS = -Wall -g -D_XOPEN_SOURCE=600
CPPFLAGS = -Wall -g -D_XOPEN_SOURCE=600

DEB_BUILDDIR := build-ipv4
DEB_BUILDDIR_bird-ipv6 := build-ipv6

DEB_CONFIGURE_SCRIPT_ENV := \
	DEB_BUILD_HARDENING=1
DEB_MAKE_ENVVARS := \
	DEB_BUILD_HARDENING=1

DEB_CONFIGURE_EXTRA_FLAGS := \
	--sysconfdir=/etc \
	--mandir=\$${prefix}/share/man \
	--infodir=\$${prefix}/share/info \
	--localstatedir=/var \
	--with-protocols=all \
	--enable-client \
	--disable-ipv6

DEB_CONFIGURE_EXTRA_FLAGS_bird-ipv6 := \
	--sysconfdir=/etc \
	--mandir=\$${prefix}/share/man \
	--infodir=\$${prefix}/share/info \
	--localstatedir=/var \
	--with-protocols=all \
	--enable-client \
	--disable-ipv6

makebuilddir/bird::
	mkdir -p $(DEB_BUILDDIR_bird-ipv6)

configure/bird::
	cd $(DEB_BUILDDIR_bird-ipv6) && $(DEB_CONFIGURE_SCRIPT_ENV) $(DEB_CONFIGURE_SCRIPT) \
	$(DEB_CONFIGURE_NORMAL_ARGS) $(cdbs_configure_flags) \
	$(DEB_CONFIGURE_EXTRA_FLAGS_bird-ipv6) $(DEB_CONFIGURE_USER_FLAGS)

build/bird::
	make -C $(DEB_BUILDDIR_bird-ipv6)

install-arch/bird::
	make -C $(DEB_BUILDDIR_bird-ipv6) install DESTDIR=$(CURDIR)/debian/tmp/

clean::
	-rm -rf $(DEB_BUILDDIR_bird-ipv6)
